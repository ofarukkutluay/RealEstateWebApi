
@model User


<div class="pagetitle">
    <h1>Kullanıcı Düzenle</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door"></i></a></li>
            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
            <li class="breadcrumb-item"><a href="/admin/users">Kullanıcılar</a></li>
            <li class="breadcrumb-item active">Düzenle</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">

        <div class="col-md-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Model.FirstName @Model.LastName - Düzenle</h5>

                    <!-- Profile Edit Form -->
                    @{
                        await Html.RenderPartialAsync("~/Views/Admin/_UploadImageForm.cshtml", new UserPhoto() { UserId = Model.Id });
                    }
                    <form asp-controller="Admin" asp-action="UpdateUser" method="post">
                        <input asp-for="Id" hidden />
                        <div class="row mb-3">
                            <label for="firstName" class="col-md-4 col-lg-3 col-form-label">Adı - Soyadı</label>
                            <div class="col-md-4 col-lg-4">
                                <input asp-for="FirstName" type="text" class="form-control" id="firstName" value="@Model.FirstName">
                            </div>
                            <div class="col-md-4 col-lg-4">
                                <input asp-for="LastName" type="text" class="form-control" id="lastName" value="@Model.LastName">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="citizenNumber" class="col-md-4 col-lg-3 col-form-label">Vatandaşlık Numarası</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="CitizenNumber" type="text" class="form-control" id="citizenNumber" value="@Model.CitizenNumber">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="Email" type="email" class="form-control" id="email" value="@Model.Email">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="mobileNumber" class="col-md-4 col-lg-3 col-form-label">Cep Telefonu</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="MobileNumber" type="text" class="form-control" id="mobileNumber" value="@Model.MobileNumber">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="phoneNumber" class="col-md-4 col-lg-3 col-form-label">Sabit Telefon</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="PhoneNumber" type="text" class="form-control" id="phoneNumber" value="@Model.PhoneNumber">
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="birthDate" class="col-md-4 col-lg-3 col-form-label">Doğum Tarihi</label>
                            <div class="col-md-8 col-lg-9">
                                <input asp-for="BirthDate" type="date" class="form-control" id="birthDate" value="@Model.BirthDate.GetValueOrDefault().ToString("yyyy-MM-dd")">
                            </div>
                        </div>



                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form><!-- End Profile Edit Form -->


                </div>
            </div>

        </div>
    </div>
</section>



