@{
  ViewData["Title"] = "Tüm Müşteriler";
}

@model IEnumerable<Customer>

<div class="pagetitle">
  <h1>Tüm Müşteriler</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door"></i></a></li>
      <li class="breadcrumb-item">Müşteriler</li>
      <li class="breadcrumb-item active">Tüm Müşteriler</li>
    </ol>
  </nav>
</div><!-- End Page Title -->

<section class="section">
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Müşteriler</h5>

          <!-- Table with stripped rows -->
          <table class="table datatable">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">İl</th>
                <th scope="col">İlçe</th>
                <th scope="col">Cep Telefonu</th>
                <th scope="col">Kayıt Yapan</th>
                <th scope="col">Yetkilisi</th>
                <th scope="col">Oluşturma Tarihi</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <th scope="row">@item.Id</th>
                  <td><a href="/customer/@item.Id">@item.FullName</a> </td>
                  <td>@item.CityId</td>
                  <td>@item.DistrictId</td>
                  <td>@item.MobileNumber</td>
                  <td>@item.RegisterUserId</td>
                  <td>@item.AssignedUserId</td>
                  <td>@item.CreatedDate</td>
                </tr>
              }


            </tbody>
          </table>
          <!-- End Table with stripped rows -->

        </div>
      </div>

    </div>
  </div>
</section>