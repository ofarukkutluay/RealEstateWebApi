@model SendMessage


<div class="pagetitle">
    <h1>İletişim</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door"></i></a></li>
            <li class="breadcrumb-item active">İletişim</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section contact">

    <div class="row gy-4">

        <div class="col-xl-6">

            <div class="row">
                <div class="col-lg-6">
                    <div class="info-box card">
                        <i class="bi bi-geo-alt"></i>
                        <h3>Address</h3>
                        <p>Küplüce mh.<br>Üsküdar, İstanbul</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-box card">
                        <i class="bi bi-telephone"></i>
                        <h3>Telefon</h3>
                        <p>+90 535 4622323</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-box card">
                        <i class="bi bi-envelope"></i>
                        <h3>Email Us</h3>
                        <p>ofarukkutluay@outlook.com</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="info-box card">
                        <i class="bi bi-clock"></i>
                        <h3>Açık Saatler</h3>
                        <p>Pazartesi - Cuma<br>09:00 - 17:00</p>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-xl-6">
            <div class="card p-4">
                <form asp-controller="Home" asp-action="SendMessage"  method="post">
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <input asp-for="Name" type="text" name="name" class="form-control" placeholder="Your Name" required>
                        </div>

                        <div class="col-md-6 ">
                            <input asp-for="Mail" type="email" class="form-control" name="mail" placeholder="Your Email" required>
                        </div>

                        <div class="col-md-12">
                            <input asp-for="Subject" type="text" class="form-control" name="subject" placeholder="Subject" required>
                        </div>

                        <div class="col-md-12">
                            <textarea asp-for="Message" class="form-control" name="message" rows="6" placeholder="Message" required></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <button class="btn btn-primary" type="submit">Send Message</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>

    </div>

</section>