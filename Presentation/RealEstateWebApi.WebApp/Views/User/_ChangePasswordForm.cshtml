@model ChangePasswordUser


<!-- Change Password Form -->
<form asp-controller="User" asp-action="ChangePasswordUser" method="post" >
    <input asp-for="UserId" hidden />
    <div class="row mb-3">
        <label for="currentPassword" class="col-md-4 col-lg-3 col-form-label">Mevcut Şifre</label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="OldPass" type="password" class="form-control" id="currentPassword">
        </div>
    </div>

    <div class="row mb-3">
        <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">Yeni Şifre</label>
        <div class="col-md-8 col-lg-9">
            <input asp-for="NewPass" type="password" class="form-control" id="newPassword">
        </div>
    </div>

    <div class="row mb-3">
        <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Tekrar</label>
        <div class="col-md-8 col-lg-9">
            <input type="password" class="form-control" id="renewPassword" asp-for="ReNewPass">
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Change Password</button>
    </div>
</form><!-- End Change Password Form -->